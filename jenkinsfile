pipeline {
 agent any
 
 tools {
   jdk 'jdk17'
   maven '3.9.9'

 }
 stages{
     stage('checkout') {
       steps {
          checkout scm
       }
     }
     stage('build') {
       steps {
          sh "mvn clean install -DskipTests"
       }
     }

    stage('deploy') {
       steps {
        sshagent(['jenkins_global']) {

      sh 'scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/assignement/webapp/target/webapp.war ubuntu@13.229.230.56:/home/ubuntu/apache-tomcat-9.0.98/webapps'
     }
      }
    }
    
   }
}
